<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_pin"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="@string/pin_hint"
        app:layout_constraintBottom_toTopOf="@id/btn_9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_5"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
    />

    <Button
        android:id="@+id/btn_4"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@id/btn_5"
        app:layout_constraintEnd_toStartOf="@id/btn_5" />

    <Button
        android:id="@+id/btn_6"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="6"
        app:layout_constraintBottom_toBottomOf="@id/btn_5"
        app:layout_constraintStart_toEndOf="@id/btn_5"

        />

    <Button
        android:id="@+id/btn_8"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@id/btn_5"
        app:layout_constraintStart_toStartOf="@id/btn_5" />

    <Button
        android:id="@+id/btn_7"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="7"
        app:layout_constraintBottom_toBottomOf="@id/btn_8"
        app:layout_constraintEnd_toStartOf="@id/btn_8" />

    <Button
        android:id="@+id/btn_9"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="9"
        app:layout_constraintBottom_toBottomOf="@id/btn_8"
        app:layout_constraintStart_toEndOf="@id/btn_8"

        />

    <Button
        android:id="@+id/btn_2"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="2"
        app:layout_constraintStart_toStartOf="@id/btn_5"
        app:layout_constraintTop_toBottomOf="@id/btn_5" />

    <Button
        android:id="@+id/btn_1"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@id/btn_2"
        app:layout_constraintEnd_toStartOf="@id/btn_2" />

    <Button
        android:id="@+id/btn_3"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@id/btn_2"
        app:layout_constraintStart_toEndOf="@id/btn_2"

        />

    <Button
        android:id="@+id/btn_0"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/btn_2"
        app:layout_constraintTop_toBottomOf="@id/btn_2" />


    <Button
        android:id="@+id/btn_ok"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="@id/btn_0"
        app:layout_constraintStart_toEndOf="@id/btn_0"

        />

    <Button
        android:id="@+id/btn_del"
        style="@style/pin_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="&lt;"

        app:layout_constraintBottom_toBottomOf="@id/btn_0"
        app:layout_constraintEnd_toStartOf="@id/btn_0"
        />


</androidx.constraintlayout.widget.ConstraintLayout>